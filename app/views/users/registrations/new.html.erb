<%= stylesheet_link_tag 'signup', :media => "all" %>

<div class="semi-header">
  <h2>新規登録</h2>
</div>

<div class="background">

  <div class="contents">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mail"><%= f.label :email, "メールアドレス" %></div>
      <div class="mail_form"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>

      <div class="password"><%= f.label :password, "パスワード（6文字以上、半角）" %></div>

        <% if false %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        <% end %>

        <div class="password_form"><%= f.password_field :password, autocomplete: "new-password" %></div>

        <div class="password"><%= f.label :password_confirmation, "パスワード（確認用）" %></div>
        <div class="password_form"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>

        <div class="actions"><%= f.submit "新規登録" %></div>
    <% end %>
  
    <div class="option">
      <% if false%><%= render "users/shared/links" %><% end %>

      <%= link_to "ログインページへ", new_session_path(resource_name), class: "link" %><br />
      <%= link_to "ホームへ", root_path, class: "link" %><br />
    </div>
  </div>
</div>

<%= stylesheet_link_tag 'login', :media => "all" %>

<div class="semi-header">
  <h2>ログイン</h2>
</div>

<div class="background">

  <div class="contents">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mail"><%= f.label :email, "メールアドレス" %></div>
      <div class="mail_form"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
      <div class="mail_sample">サンプルは diary@demo</div>

      <div class="password"><%= f.label :password, "パスワード" %></div>
      <div class="password_form"><%= f.password_field :password, autocomplete: "off" %></div>
      <div class="password_sample">サンプルは diarydemo</div>

      <div class="keep_login">
        <% if devise_mapping.rememberable? -%>
          <div class="ifkeep"><%= f.label :remember_me, "ログインしたままにする" %></div>
          <div class="check"><%= f.check_box :remember_me, class: "check_box" %></div>
        <% end -%>
      </div>

      <div class="actions"><%= f.submit "ログイン" %></div>
    <% end %>

    <div class="option">
      <% if false%><%= render "users/shared/links" %><% end %>

      <%= link_to "新規登録ページへ", new_registration_path(resource_name), class: "renderlink" %><br />
      <%= link_to "ホームへ", root_path, class: "renderlink" %><br />
    </div>
  </div>
</div>
